@model BlockTechMVC.Models.SaldoCriptomoedaHoje

@{
    ViewData["Title"] = "Adicionar";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompraCriptomoeda.ContaCliente.ApplicationUser.Nome" class="control-label"></label>
                <select asp-for="CompraCriptomoeda.ContaCliente.ApplicationUser.Nome" class="form-control"></select>
                <span asp-validation-for="CompraCriptomoeda.ContaCliente.ApplicationUser.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompraCriptomoeda.CriptomoedaHoje.Criptomoeda.Nome" class="control-label"></label>
                <select asp-for="CompraCriptomoeda.CriptomoedaHoje.Criptomoeda.Nome" class="form-control"></select>
                <span asp-validation-for="CompraCriptomoeda.CriptomoedaHoje.Criptomoeda.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompraCriptomoeda.CriptomoedaHoje.Criptomoeda.Nome" class="control-label"></label>
                <select asp-for="CompraCriptomoeda.CriptomoedaHoje.Criptomoeda.Nome" class="form-control"></select>
                <span asp-validation-for="CompraCriptomoeda.CriptomoedaHoje.Criptomoeda.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompraCriptomoeda.CriptomoedaHoje.Criptomoeda.Simbolo" class="control-label"></label>
                <select asp-for="CompraCriptomoeda.CriptomoedaHoje.Criptomoeda.Simbolo" class="form-control"></select>
                <span asp-validation-for="CompraCriptomoeda.CriptomoedaHoje.Criptomoeda.Simbolo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CompraCriptomoeda.CalcularQuantidadeCriptomoeda()" class="control-label"></label>
                <select asp-for="CompraCriptomoeda.CalcularQuantidadeCriptomoeda()" class="form-control"></select>
                <span asp-validation-for="CompraCriptomoeda.CalcularQuantidadeCriptomoeda()" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
