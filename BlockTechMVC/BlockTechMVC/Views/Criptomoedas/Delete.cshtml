@model BlockTechMVC.Models.Criptomoeda

@{
    ViewData["Title"] = "Deletar";
}
<br />
<h1>@ViewData["Title"]</h1>
<br />
<h3>Tem certeza que deseja deletar essa criptomoeda?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Simbolo)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Simbolo)
        </dd>
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.Cadastro)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.Cadastro)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
    </form>
    <div>
        <a asp-action="Index">Voltar</a>
    </div>
</div>
